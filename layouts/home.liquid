<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
<link rel="stylesheet" href="https://unpkg.com/modern-css-reset/dist/reset.min.css">
<link rel="stylesheet" href="/styles/main.css">

<section id="works">
    <section class="work">
        <section class="work-preview"></section>
        <section class="work-info">{{ content }}</section>
    </section>
</section>
<section id="works">
    {% for work in works %}

    <hr class="works-separator">
    <section class="work">
        <section class="work-preview">
            {% assign src = work.preview.source | prefix_location: work.preview.location %}
            {% work_preview src work.preview.alt work.links work.preview.link work.preview.class %}
        </section>
        <section class="work-info">
            <h2>{{ work.title | typography }}</h2>
            <h3>{{ work.type | typography }}</h3>
            <p>{{ work.description | typography }}</p>
            <section class="work-links">
                {% for link in work.links %}

                <a href="{{ link.target | prefix_location: link.location }}"
                   target="_blank">{{ link.label | typography }}</a>

                {% endfor %}
            </section>
        </section>
    </section>
    {% endfor %}
</section>
